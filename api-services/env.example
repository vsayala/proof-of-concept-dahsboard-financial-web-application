# Node.js Environment
NODE_ENV=development
PORT=3000

# CORS Configuration
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# SQL Server Configuration
SQL_USER=sa
SQL_PASSWORD=YourStrong@Passw0rd
SQL_DATABASE=FinancialDashboard
SQL_SERVER=localhost
SQL_PORT=1433
SQL_ENCRYPT=false
SQL_TRUST_CERT=true

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/audit_data
MONGO_DATABASE=audit_data
MONGO_URL=mongodb://localhost:27017/audit_data

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Databricks/Delta Lake Configuration
DATABRICKS_HOST=your-workspace.cloud.databricks.com
DATABRICKS_TOKEN=your-personal-access-token
DATABRICKS_WORKSPACE_ID=your-workspace-id
DATABRICKS_CATALOG=hive_metastore
DATABRICKS_SCHEMA=default

# Azure Storage Configuration
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your-account;AccountKey=your-key;EndpointSuffix=core.windows.net
AZURE_STORAGE_ACCOUNT_NAME=your-account
AZURE_STORAGE_ACCOUNT_KEY=your-key
AZURE_STORAGE_CONTAINER=audit-data

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-access-key
AWS_SECRET_ACCESS_KEY=your-secret-key
AWS_REGION=us-east-1
AWS_S3_BUCKET=audit-poc-data

# Google Cloud Storage Configuration
GCP_PROJECT_ID=your-project-id
GCP_KEY_FILENAME=path/to/service-account-key.json
GCP_BUCKET_NAME=audit-poc-data

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs

# Security Configuration
JWT_SECRET=your-jwt-secret-key
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Performance Configuration
REQUEST_TIMEOUT=30000
MAX_FILE_SIZE=10485760

# RAG & LLM Configuration
OLLAMA_URL=http://localhost:11434
OLLAMA_MODEL=llama2:20b
USE_OLLAMA=true
OPENAI_API_KEY=
RAG_MAX_DOCS=10
